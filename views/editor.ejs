<%- include("_header") -%>

  <h1>
    <%= model.prod_id ? "Edit Product" : "Add Product" %>
  </h1>

  <form action="<%= model.prod_id ? '/edit/' + model.prod_id : '/add' %>" method="POST">
    <% if (model.prod_id) { %>
      <div class="mb-3">
        <label for="prod_id" class="form-label">Product ID</label>
        <input type="text" class="form-control" id="prod_id" name="prod_id" value="<%= model.prod_id %>" readonly>
      </div>
      <% } %>
        <div class="mb-3">
          <label for="prod_name" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="prod_name" name="prod_name" value="<%= model.prod_name || '' %>"
            required>
        </div>
        <div class="mb-3">
          <label for="prod_desc" class="form-label">Product Description</label>
          <input type="text" class="form-control" id="prod_desc" name="prod_desc" value="<%= model.prod_desc || '' %>"
            required>
        </div>
        <div class="mb-3">
          <label for="prod_price" class="form-label">Product Price</label>
          <input type="text" class="form-control" id="prod_price" name="prod_price"
            value="<%= model.prod_price || '' %>" required>
        </div>
        <button type="submit" class="btn btn-primary">
          <%= model.prod_id ? "Update Product" : "Add Product" %>
        </button>
  </form>

  <%- include("_footer") -%>