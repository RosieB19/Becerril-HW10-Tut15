<%- include("_header") -%>

  <h1>Manage Products</h1>

  <% if(message !=="success" ) { %>
    <h2>We Encountered an Error</h2>
    <p>
      <%= message %>
    </p>
    <% } else { %>
      <h3>There are <%= model.length %> Products in the Database</h3>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% model.forEach(product=> { %>
            <tr>
              <td>
                <%= product.prod_id %>
              </td>
              <td>
                <%= product.prod_name %>
              </td>
              <td>
                <%= product.prod_desc %>
              </td>
              <td>
                <%= product.prod_price %>
              </td>
              <td>
                <a href="/edit/<%= product.prod_id %>" class="btn btn-warning btn-sm">Edit</a>

                <form action="/delete/<%= product.prod_id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button> 
                </form>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% } %>

        <a href="/add" class="btn btn-success">Add New Product</a> 

        <%- include("_footer") -%>